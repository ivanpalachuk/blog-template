---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='font-semibold text-white dark:bg-slate-800 dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
		style={{ background: `#a3906b` }}
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
